<!DOCTYPE html>
<html>
	<head>
		{{#header}}
			{{> meta.mustache}}
		{{/header}}

		<style type="text/css">
			form { margin: 0; }
			form label, form button { display: inline-block; }
		</style>
	</head>

	<body>
		{{#header}}
			{{> header.mustache}}
		{{/header}}

		<section>
			<h1>Transfer to IOUs</h1>
			<p>An automated service will call your telephone number shortly.  Please enter the verification code in the form below.</p>

			{{#renderedDepositForm}}
				<form method="post" action="{{formAction}}">
					{{{formHtml}}}
					<button type="submit">Verify</button>
				</form>
			{{/renderedDepositForm}}
		</section>
	</body>
</html>
